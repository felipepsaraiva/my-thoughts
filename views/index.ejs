<%- include('header', { stylesheets: ['index.css'] }) %>

<div class="container body-font">
  <h1 class="title-font">My Thoughts</h1>

  <div class="row">
    <div class="col-md-4 col-md-offset-2 col-sm-6">
      <h2 class="title-font text-center">Sign In</h2>

      <form action="/login" method="post">
        <div class="form-group">
          <label for="username">Username</label>
          <input class="form-control input-lg field" type="text" id="username" name="username" autocomplete="off">
        </div>
        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control input-lg field" type="password" id="password" name="password" autocomplete="off">
        </div>

        <button type="submit" class="btn btn-primary btn-lg center-block">Submit</button>
      </form>
    </div>

    <div class="col-md-4 col-sm-6 separator">
      <h2 class="title-font text-center">Sign Up</h2>

      <form action="/register" method="post">
        <div class="form-group">
          <label for="email">Email</label>
          <input class="form-control input-lg field" type="email" id="email" name="email" autocomplete="off">
        </div>

        <div class="form-group">
          <label for="username">Username</label>
          <input class="form-control input-lg field" type="text" id="username" name="username" autocomplete="off">
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input class="form-control input-lg field" type="password" id="password" name="password" autocomplete="off">
        </div>

        <div class="form-group">
          <label for="password-again">Confirm Password</label>
          <input class="form-control input-lg field" type="password" id="password-again" name="password-again" autocomplete="off">
        </div>

        <button type="submit" class="btn btn-primary btn-lg center-block">Submit</button>
      </form>
    </div>
  </div>
</div>

<%- include('footer') %>
